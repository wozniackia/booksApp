<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Ubuntu:wght@500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/frontend/styles/style.css">
    <link rel="stylesheet" href="/frontend/styles/album.css">
    <title>BooksApp</title>
</head>
<body onload="darkMode()">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
          <a class="navbar-brand" href="">
              <img src="/frontend/resources/logo.svg" alt="App logo" width="50" height="50">
              BooksApp
          </a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="./browse">Browse books</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="./add">Add books</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="./search">Search</a>
              </li>
            </ul>
          </div>
          <button class="btn btn-light" onclick="toggleLocalStorage(); darkMode();"><i class="bi bi-lightbulb-fill"></i></button>
        </div>
    </nav>

    <section class="py-5 text-center container">
      <div class="row py-lg-5">
        <div class="col-lg-6 col-md-8 mx-auto">
          <h1 class="fw-light text-white"><img src="/frontend/resources/logo.svg" alt="App logo" width="50" height="50">BooksApp</h1>
          <p class="lead text-white">Simple app to rate books</p>
          <p>
            <a href="./browse" class="btn my-2 btn-light">Browse books</a>
            <a href="./add" class="btn btn-secondary my-2">Add book</a>
          </p>
        </div>
      </div>
    </section>
  
    <div class="album py-5 bg-light">
      <div class="text-center text-dark fs-1">Top rated books</div>
      <div class="container">
  
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
          <div class="col">
            <div class="card shadow-sm">
              <div class="img-wrapper">
                <img id="bookCover1" src="" alt="Book cover" class="img-fluid"></img>
              </div>
  
              <div class="card-body">
                <p class="card-text" id="bookName1"></p>
                <div class="d-flex justify-content-between align-items-center">
                  <small class="text-muted">
                    <i class="fa-solid fa-star one-star"></i>
                    <i class="fa-solid fa-star two-star"></i>
                    <i class="fa-solid fa-star three-star"></i>
                    <i class="fa-solid fa-star four-star"></i>
                    <i class="fa-solid fa-star five-star"></i>
                  </small>
                </div>
              </div>
            </div>
          </div>
          <div class="col">
            <div class="card shadow-sm">
              <div class="img-wrapper">
                <img id="bookCover2" alt="Book cover" src="" class="img-fluid"></img>
              </div>
  
              <div class="card-body">
                <p class="card-text" id="bookName2"></p>
                <div class="d-flex justify-content-between align-items-center">
                  <small class="text-muted">
                    <i class="fa-solid fa-star one-star"></i>
                    <i class="fa-solid fa-star two-star"></i>
                    <i class="fa-solid fa-star three-star"></i>
                    <i class="fa-solid fa-star four-star"></i>
                    <i class="fa-solid fa-star five-star"></i>
                  </small>
                </div>
              </div>
            </div>
          </div>
          <div class="col">
            <div class="card shadow-sm">
              <div class="img-wrapper">
                <img id="bookCover3" alt="Book cover" src="" class="img-fluid"></img>
              </div>              
  
              <div class="card-body">
                <p class="card-text" id="bookName3"></p>
                <div class="d-flex justify-content-between align-items-center">
                  <small class="text-muted">
                    <i class="fa-solid fa-star one-star"></i>
                    <i class="fa-solid fa-star two-star"></i>
                    <i class="fa-solid fa-star three-star"></i>
                    <i class="fa-solid fa-star four-star"></i>
                    <i class="fa-solid fa-star five-star"></i>
                  </small>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Icons -->
    <script src="https://kit.fontawesome.com/28100bcb2a.js" crossorigin="anonymous"></script>
    <!-- Axios -->
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <!-- Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <!-- Own scripts -->
    <script src="/frontend/js/index.js"></script>
    <script src="/frontend/js/get-rating.js"></script>
    <script src="/frontend/js/dark-mode.js"></script>
</body>
</html>